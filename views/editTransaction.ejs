<br>
<form action="/transaction/updateTransaction" method="POST">

    <input type="hidden" name="transactionId" value="<%= transaction._id %>">

	<label for="description">Description:</label>
	<input type="text" id="description" name="description" required
		value="<%= transaction.description %>">
	<br>

	<label for="category">Category:</label>
	<input type="text" id="category" name="category" required
		value="<%= transaction.category %>">
	<br>

	<label for="amount">Amount:</label>
	<input type="number" id="amount" name="amount" step="0.01" required
		value="<%= transaction.amount %>">
	<br>

	<label for="date">Date:</label>
	<input type="date" id="date" name="date" required
		value="<%= transaction.date.toISOString().substr(0, 10) %>">
	<br>

	<bubble><input type="submit" value="Update"></bubble>
</form>